<% if @source %>
  <h1> List of Category Pages for <%= @source.name %> </h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Url</th>
    </tr>

    <% @category_pages.each do |cat_page| %>
      <tr>
        <td><%= cat_page.name %></td>
        <td><%= cat_page.url %></td>
        <td><%= cat_page.url %></td>
        <td><%= link_to 'Manage category page', admin_category_page_path(cat_page) %></td>
        <td><%= button_to 'Delete category page', admin_category_page_path(cat_page), method: :delete %></td>
      </tr>
    <% end %>

  </table>
<%= link_to 'Add a category page', new_admin_category_page_path(source_id: @source.id) %>
<% end %>
